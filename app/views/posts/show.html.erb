<div class="posts show">
  <h2> Show Post </h2>

  <table summary="detail view">
    <tr>
      <th>Header</th>
      <td><%= @post.header %></td>
    </tr>
    <tr>
      <th> Image </th>
      <% @post.images.each do |image| %>
        <td><%= image_tag image,:style => "width:400px;height:400px" %></td>
       <%end %>
    </tr>
    <tr>
      <th>Content</th>
      <td><%= @post.content %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @post.name %></td>
    </tr>
    <tr>
      <th>Location</th>
      <td><%=@post.location %></td>
    </tr>
    <tr>
      <th>Phone Number</th>
      <td><%=@post.phone_number %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @post.position %></td>
    </tr>
    <tr>
      <th>Visible</th>
      <td><%= @post.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Visitor Count</th>
      <td><%= @post.visitor_count %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @post.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @post.updated_at %></td>
    </tr>
  </table>
</div>