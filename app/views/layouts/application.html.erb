<!DOCTYPE html>
<html>
  <head>
    <title>Daisy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background-color: lightgoldenrodyellow">

    <!--Main Navigation-->
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#D980FA;">
        <img src="/assets/daisy-40.png" />
        <a class="navbar-brand" href="/"><strong>&nbsp;Daisy Business</strong></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Features</a>
            </li>
            <!--
            <li class="nav-item">
              <a class="nav-link" href="#">Pricing</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Opinions</a>
            </li>
            -->
            <% if user_signed_in? %>
              <li class="nav-item">
                <a class="nav-link" href="/posts"> My Posts</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/posts/new"> Add Post</a>
              </li>
            <% end %>
          </ul>

          <% if user_signed_in? %>
            <!--
            <div class="dropdown">
              <button type="button" class="btn btn-outline-light dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Account
              </button>
              <div class="dropdown-menu dropdown-menu-left"  aria-labelledby="dropdownMenuButton" style="background-color:#D980FA;min-width: 100%" >
                <a class="dropdown-item" style="color:#FFC312;font-weight:500" href="#">Action</a>
                <a class="dropdown-item" style="color:#FFC312;font-weight:500" href="#">Another action</a>
                <a class="dropdown-item" style="color:#FFC312;font-weight:500" href="#">Something else</a>
              </div>
            </div>
            -->
            <button type="button" class="btn btn-outline-light">
              <a href="/users/sign_out" style="color:#f8f9fa;text-decoration:none" >
                Logout
              </a>
            </button>

          <% else %>
            <div>
              <button type="button" class="btn btn-outline-light">
                <a href="/users/sign_up" style="color:#f8f9fa;text-decoration:none" >
                  Sign up
                </a>
              </button>
              <button type="button" class="btn btn-outline-light">
                <a href="/users/sign_in" style="color:#f8f9fa;text-decoration:none" >
                  Login
                </a>
              </button>
            </div>
          <% end %>
        </div>

      </nav>
    </header>
    <!--Main Navigation-->

    <!--Notifications-->
    <% if flash[:notice] %>
      <div class="alert alert-success" role="alert">
        <%=flash[:notice] %>
      </div>
    <% elsif flash[:alert]%>
      <div class="alert alert-danger" role="alert">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <!--Notifications-->

    <%= yield %>


  </body>
</html>
